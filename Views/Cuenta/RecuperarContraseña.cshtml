@model InverPaper.Models.RecuperarContraseñaViewModel
@{
    ViewBag.Title = "RecuperarContraseña";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

<h2>Recuperar Contraseña</h2>
@using (Html.BeginForm("RecuperarContraseña", "Cuenta", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label>Correo electrónico registrado:</label>
        @Html.TextBox("correo", null, new { @class = "form-control", required = "required", type = "email" })
        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Recuperar</button>
}

