@model InverPaper.Models.LoteViewModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Lote</h2>
@using (Html.BeginForm("Crear", "Lote", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    if (ViewBag.Advertencia != null)
    {
        <div class="alert alert-warning">@ViewBag.Advertencia</div>
        <div class="form-group">
            @Html.CheckBoxFor(m => m.ConfirmarPrecioDiferente)
            @Html.LabelFor(m => m.ConfirmarPrecioDiferente, "Registrar con este precio de todas formas")
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(m => m.IdProducto)
        @Html.DropDownListFor(m => m.IdProducto, Model.Productos, "-- Selecciona un producto --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IdProducto, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumeroLote)
        @Html.TextBoxFor(m => m.NumeroLote, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumeroLote, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cantidad)
        @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number", step = "1" })
        @Html.ValidationMessageFor(m => m.Cantidad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PrecioCompra)
        @Html.TextBoxFor(m => m.PrecioCompra, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(m => m.PrecioCompra, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-naranja">Crear Lote</button>
        @Html.ActionLink("Cancelar", "Productos", "Producto", null, new { @class = "btn btn-secondary" })
    </div>

}
<style>
    /* Estilo CSS para ajustar los campos */
    .form-control {
        width: 100%; /* Ocupa todo el ancho disponible, pero se limita por el contenedor */
        max-width: 400px; /* Limita el ancho máximo de los campos */
        margin: 0 auto; /* Centra el formulario en el contenedor */
        box-sizing: border-box;
    }

    .form-group {
        margin-bottom: 1rem; /* Espacio entre los campos */
    }

    .btn {
        width: auto; /* No estira los botones */
    }

    /* Centra el formulario */
    form {
        max-width: 500px; /* Máximo ancho del formulario */
        margin: 0 auto; /* Centra el formulario */
    }
</style>

